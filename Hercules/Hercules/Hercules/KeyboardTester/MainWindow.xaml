<Window x:Class="KeyboardTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WpfKb="clr-namespace:WpfKb.Controls;assembly=WpfKb"
        Title="MainWindow" Height="350" Width="525">
    <Grid Loaded="Grid_Loaded">

        <TextBox Height="68" HorizontalAlignment="Left" Margin="34,18,0,0" Name="textBox1" VerticalAlignment="Top" Width="438" />
        
        <WpfKb:FloatingTouchScreenKeyboard
            x:Name="Keyboard"
            IsOpen="True"
            Width="900"
            Height="400"
            Placement="Center"
            AreAnimationsEnabled="True" PreviewKeyDown="Keyboard_PreviewKeyDown" PreviewTextInput="Keyboard_PreviewTextInput" KeyDown="Keyboard_KeyDown" TextInput="Keyboard_TextInput" />
        
    </Grid>
</Window>
