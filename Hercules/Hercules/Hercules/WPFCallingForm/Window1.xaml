        <WindowsFormsHost Name="wfh"
                     Canvas.Left="0" Canvas.Top="0">

            <mcl:UserControl1 Name="mc"/>
            
            <WindowsFormsHost.RenderTransform>
                <RotateTransform Angle="180" CenterX="200" CenterY="200"/>
            </WindowsFormsHost.RenderTransform>
            
        </WindowsFormsHost>
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="169,12,0,0" Name="button1" VerticalAlignment="Top" Width="75">
