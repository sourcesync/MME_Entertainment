  <!-- 1 = BW only, 2 = Color only 3 = User choice -->
  <add key="COLOR_TYPES" value="5" />

  <add key="ROOM_NUMBER_MODE" value="0" />

  <!-- The color of text generaeted by the booth example #ffffff = white, #000000 = black -->
