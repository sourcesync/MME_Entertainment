  <!-- cloud for the photo booths -->


  <add key="PublicPhotoUrl" value="http://favpic.mobi/event/{1}/photo/{0}.jpg"/>


  <!-- Email settings -->
  <add key="ForceEmail" value="1" /> <!-- 1=force, 0=give skip button -->


  <!-- user cannot skip the email screen (operator has hidden skip button) -->
  <add key="EmailPublishUrl" value="http://favpic.mobi/hercules.php" />


  <!-- leave blank to use smtp settings below -->
  <add key="SmtpServer" value="" />
  <add key="SmtpUsername" value="" />
